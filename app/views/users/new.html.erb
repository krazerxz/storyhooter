
<div class="container" id="content">
  <div class="col-md-12">
    <div class="previous">
      <div id="referred-from">You heard from <%=@user_display.parent_name%></div>

      <div id="story-so-far">
        <%@user_display.story.each do |element|%>
          <p><%=element%></p>
        <% end %>
      </div>
    </div>
  </div>

  <%= bootstrap_form_for :user do |field| %>

    <div class="col-md-12">
      <p>
        <%= field.text_field(:tale, required: true) %>
      </p>
    </div>

    <div class="col-md-6">
      <p> <%= field.text_field(:name, required: true) %> </p>
    </div>
    <div class="col-md-6">
      <p> <%= field.collection_select :country_id, Country.all,:id,:name %> </p>
    </div>

    <%= field.hidden_field 'parent_uuid', :value => @user_display.parent_uuid %>
    <div class="col-md-12">
      <%= field.submit 'save' %>
    </div>
  <% end %>

</div>
