      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>

  <header>
    <div class="container">
      <div class="intro-text">
        <div class="intro-lead-in">Story Hooter</div>
        <a href="/" class="btn btn-default header-button">What is this?</a>
      </div>
    </div>
  </header>

  <%= yield %>

